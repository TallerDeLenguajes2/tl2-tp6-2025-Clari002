-- modificaar un producto
UPDATE Productos SET Descripcion='Teclado Mecánico Logitech', Precio=12000
WHERE idProducto=3;

-- modificar NombreDestinatario de Presupuesto
UPDATE Presupuesto SET NombreDestinatario='Luis Fernández'
WHERE idPresupuesto=1;

-- eliminar un registro de PresupuestoDetalle
DELETE FROM PresupuestosDetalle WHERE idPresupuesto = 1 AND idProducto=2;